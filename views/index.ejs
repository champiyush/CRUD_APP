<%- include('./partials/header.ejs') %>

<div class="container">
  <div class="row">
    <div class="col-sm-6 mt-5">
      <h2 class="alert alert-success text-center">Add New Student</h2>
      <form action="" method="post">
        <div class="mb-3">
          <label for="name" class="form-label">Name</label>
          <input type="text" class="form-control" name="name" id="name" />
        </div>
        <div class="mb-3">
          <label for="sem" class="form-label">Sem</label>
          <input type="text" class="form-control" name="sem" id="sem" />
        </div>
        <div class="mb-3">
          <label for="course" class="form-label">Course</label>
          <input type="text" class="form-control" name="course" id="Course" />
        </div>
        <button type="submit" class="btn btn-primary">submit</button>
      </form>
    </div>
    <div class="col-sm-6 mt-5">
      <h2 class="alert alert-danger text-center">List of Students</h2>
      <%# Show All Data %>
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th scope="col">No</th>
            <th scope="col">Name</th>
            <th scope="col">Sem</th>
            <th scope="col">Course</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <% var i=1 %>
          <% data.forEach((item)=>{ %>
            <tr>
              <td><%= i++ %></td>
              <td><%= item.name%></td>
              <td><%= item.sem%></td>
              <td><%= item.course%></td>
              <td>
                <form action="/student/edit/<%= item._id%>" method="get" class="d-inline">
                  <button type="submit" class="btn">
                    <i class="fas fa-pen-square text-info"></i>
                  </button>
                </form>
                <form action="/student/delete/<%= item._id%>" method="post" class="d-inline">
                  <button type="submit" class="btn">
                    <i class="fas fa-trash text-danger"></i>
                  </button>
                </form>
              </td>
            </tr>
        <%  }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%- include('./partials/footer.ejs') %>
